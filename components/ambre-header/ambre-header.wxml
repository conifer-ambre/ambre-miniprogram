<!--components/ambre-header/ambre-header.wxml-->
<view
class="{{transparent?'transparent':''}}"
style="height:{{height}}px;">
  <view
  class="header"
  style="height:{{height}}px;background-color:{{background}};color:{{color}};">
    <view
    class="flex-justify-align-between"
    style="padding-top:{{status}}px;">
      <view
      class="back"
      wx:if="{{back}}">
        <text bindtap="handleBack" class="iconfont icon-chevron-left"></text>
        <text bindtap="handleIndex" class="iconfont icon-home"></text>
      </view>
      <view class="title" style="top:{{status + 10}}px">{{title}}</view>
      <view></view>
    </view>
  </view>
</view>
