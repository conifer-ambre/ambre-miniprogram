/* components/ambre-header/ambre-header.wxss */
@import '../../wxss/common.wxss';
@import '../../assets/iconfont/iconfont.wxss';
.header {
  width: 100%;
  z-index: 99;
  position: fixed;
}
.back {
  margin-left: 20rpx;
  border: 1rpx solid #E5E5E5;
  box-sizing: border-box;
  height: 60rpx;
  margin-top: 10rpx;
  border-radius: 50rpx;
  z-index: 99 !important;
}
.transparent {
  position: fixed;
  background: #00000000;
  z-index: 99;
}
.iconfont {
  display: inline-block;
  text-align: center;
  margin: 10rpx 0;
  padding:0 25rpx;
  vertical-align: middle;
}
.iconfont:first-child {
  font-size: 36rpx;
  border-right: 1rpx solid #E5E5E5;
}
.iconfont:last-child {
  font-size: 36rpx;
}
.title {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
